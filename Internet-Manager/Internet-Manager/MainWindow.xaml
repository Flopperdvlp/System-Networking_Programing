<Window x:Class="Internet_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Traffic Monitor" Height="400" Width="600">
    <Grid>
        <ComboBox x:Name="DeviceList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="550" Margin="10"/>
        <Button Content="Start Capture" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,40,0,0" Click="StartCaptureButton_Click"/>
        <TextBox x:Name="PacketDetails" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,10,10" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True"/>
    </Grid>
</Window>